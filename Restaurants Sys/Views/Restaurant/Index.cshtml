@model  IEnumerable<Restaurant>
@{
   
}

<div class="text-center">
    <h1>this restaurent Page</h1>
</div>
<div class="m-5">
    <table>
        <tr>
            <th>id</th>
            <th>name</th>
            <th>Phone</th>
            <th>Addresse</th>
            <th>LogoImageUrl</th>
            <th>BannerImageUrl</th>
            <th>WhatsAppNumber</th>
            <th></th>
        </tr>
        @foreach(var obj in Model)
        {
            <tr>
                <td>@obj.Id</td>
                <td>@obj.Name</td>
                <td>@obj.Phone</td>
                <td>@obj.Address</td>
                <td>@obj.LogoImageUrl</td>
                <td>@obj.BannerImageUrl</td>
                <td>@obj.WhatsAppNumber</td>
                <td> <a asp-controller="Category" asp-action="Index"  asp-route-RestaurantId="@obj.Id" class="btn btn-primary">visit</a> </td>
            </tr>
        }

    </table>
    <div>
        <a asp-controller="Restaurant" asp-action="create" >Add your restaurent</a>
    </div>
</div>