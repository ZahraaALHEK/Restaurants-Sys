@model Restaurant

<form method="post" enctype="multipart/form-data">
    <input type="hidden" asp-for="Id" />
    <div class="p-3 mt-4">
        <div class="row pb-2">
            <h3 class="text-primary text-center">Edit your Restaurant</h3>
            <hr> 
        </div>
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="mb-3">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control"/>
            <span asp-validation-for="Name" class="text-danger"></span>
            
            <label asp-for="Phone" class="mt-2"></label>
            <input asp-for="Phone" class="form-control"/>
            <span asp-validation-for="Phone" class="text-danger"></span>
            
            <label asp-for="Address" class="mt-2"></label>
            <input asp-for="Address" class="form-control"/>
            <span asp-validation-for="Address" class="text-danger"></span>
            
            <!-- Logo Image Section -->
            <div class="mt-2">
                <label asp-for="LogoImageUrl"></label>
                @if (!string.IsNullOrEmpty(Model.LogoImageUrl))
                {
                    <div class="mb-2">
                        <img src="@Model.LogoImageUrl" alt="Restaurant Logo" style="max-height: 100px;"/>
                        <input type="hidden" asp-for="LogoImageUrl" />
                    </div>
                }
                <label asp-for="LogoImageFile">Upload New Logo</label>
                <input asp-for="LogoImageFile" type="file" class="form-control"/>
                <span asp-validation-for="LogoImageFile" class="text-danger"></span>
            </div>
            
            <!-- Banner Image Section -->
            <div class="mt-2">
                <label asp-for="BannerImageUrl"></label>
                @if (!string.IsNullOrEmpty(Model.BannerImageUrl))
                {
                    <div class="mb-2">
                        <img src="@Model.BannerImageUrl" alt="Restaurant Banner" style="max-height: 100px;"/>
                        <input type="hidden" asp-for="BannerImageUrl" />
                    </div>
                }
                <label asp-for="BannerImageFile">Upload New Banner</label>
                <input asp-for="BannerImageFile" type="file" class="form-control"/>
                <span asp-validation-for="BannerImageFile" class="text-danger"></span>
            </div>
            
            <label asp-for="WhatsAppNumber" class="mt-2"></label>
            <input asp-for="WhatsAppNumber" class="form-control"/>
            <span asp-validation-for="WhatsAppNumber" class="text-danger"></span>
        </div>
        <div class="mt-3">
            <button type="submit" class="btn btn-primary" style="width:150px;">Update</button>
            <a asp-controller="Restaurant" asp-action="Index" class="btn btn-secondary" style="width: 150px;">Back to Restaurants</a>
        </div>
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}